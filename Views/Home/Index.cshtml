@{
  ViewData["Title"] = "Home Page";
}

<br><h2 class="link-info">Upload de Arquivos</h2><br/>

<div class="alert alert-primary" role="alert">
  Selecione todos os arquivos referente ao mês que desejado para criação da planilha!
</div>

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
  <div class="well">
    <table class="table table-striped">
      <tr>
        <td><input type="file" id="Arquivos" name="Arquivos" multiple /></td>
        <td><input type="submit" name="submit" class="btn btn-success" value="Enviar Arquivos" /></td>
      </tr>
    </table>
  </div>

  @if (TempData["ShowAlert"] is not null)
  {
    <div class="alert alert-success" role="alert">
      <strong>@TempData["ShowAlert"]</strong>
    </div>
  }

  @if (TempData["AlertMessage"] is not null)
  {
    <div class="alert alert-danger" role="alert">
      <strong>@TempData["AlertMessage"]</strong>
    </div>
  }

}